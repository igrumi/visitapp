<head>
  <title>Checkmark Button Example</title>
  <style>
    .item {
      margin-bottom: 10px;
    }
    .item.completed {
      text-decoration: line-through;
    }
  </style>
</head>
<body>
  <h1>Checkmark Button Example</h1>
  
  <!-- Form to add a new item -->
  <form method="POST" action="/">
    <input type="text" name="item" placeholder="Enter an item" required>
    <button type="submit">Add</button>
  </form>

  <!-- Display the items -->
  <% items.forEach((item) => { %>
