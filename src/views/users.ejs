<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar.css">
</head>

<body>
    <%- include("components/navbar.ejs")%>
<header class="header">
    <h1 class="title">Jefe Hogar</h1>
</header>
  <div class="decor_container"><h1>Administrador de Usuarios</h1></div>

  <div class="table_title"><h2>Usuarios Activos</h2></div>

  <table>
    <thead>
      <tr>
        <th>RUT</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Rol</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% usuariosActivos.forEach(function(usuario) { %>
        <tr>
          <td><%= usuario.rut %></td>
          <td><%= usuario.nombre %></td>
          <td><%= usuario.correo %></td>
          <td><%= usuario.rol %></td>
          <td>Activo</td>
          <td>
            <a href="/users/edit/<%= usuario.rut %>"><button>Editar</button></a>
            <a href="/users/disable/<%= usuario.rut %>"><button>Deshabilitar</button></a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<hr>
<div class="table_title"><h2>Usuarios Inactivos</h2></div>
  <table>
    <thead>
      <tr>
        <th>RUT</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Rol</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% usuariosInactivos.forEach(function(usuario) { %>
        <tr>
          <td><%= usuario.rut %></td>
          <td><%= usuario.nombre %></td>
          <td><%= usuario.correo %></td>
          <td><%= usuario.rol %></td>
          <td>Inactivo</td>
          <td>
            <a href="/users/edit_inactive/<%= usuario.rut %>"><button>Editar</button></a>
            <a href="/users/enable/<%= usuario.rut %>"><button>Habilitar</button></a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table><br>
  <hr>
  <div class="decor_container0">
    <h2>Agregar Usuario</h2>
    <form action="/users/add" method="POST">
      <label for="rut">RUT:</label>
      <input type="text" name="rut" required>

      <label for="nombre">Nombre:</label>
      <input type="text" name="nombre" required>

      <label for="correo">Correo:</label>
      <input type="email" name="correo" required>

      <label for="contrasena">Contrase√±a:</label>
      <input type="password" name="contrasena" required>

      <label for="rol">Rol:</label>
      <input type="text" name="rol" required><br>

      <button class="decor_button" type="submit">Agregar</button>
    </form>
  </div>
</body>
</html>
